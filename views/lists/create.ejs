<!-- views/lists/create.ejs -->
<% layout('layout') %>

<div class="container">
    <h1>Create a New List</h1>

    <form action="/lists/create" method="POST" class="create-list-form">
        <div class="form-group">
            <label for="title">List Title:</label>
            <input type="text" id="title" name="list[title]" required>
        </div>

        <div class="form-group">
            <label for="description">Description (optional):</label>
            <textarea id="description" name="list[description]" rows="3"></textarea>
        </div>

        <button type="submit" class="btn-primary">Create List</button>
    </form>

    <a href="/lists" class="btn-secondary">Back to Lists</a>
</div>

